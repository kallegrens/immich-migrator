{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "python",
  "packages": {
    ".": {
      "release-type": "python",
      "package-name": "immich-migrator",
      "include-component-in-tag": false,
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": false,
      "extra-files": [
        {
          "type": "generic",
          "path": "README.md",
          "replacements": [
            {
              "type": "regex",
              "pattern": "\\[Version\\s+([0-9]+\\.[0-9]+\\.[0-9]+)\\]\\(https://github.com/kallegrens/immich-migrator/releases/tag/v[0-9]+\\.[0-9]+\\.[0-9]+\\) is the current stable release\\.",
              "template": "[Version {{version}}](https://github.com/kallegrens/immich-migrator/releases/tag/v{{version}}) is the current stable release."
            }
          ]
        }
      ]
    }
  }
}
